{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": [
			"ES2020",
			"DOM"
		],
		"moduleResolution": "node",
		"outDir": "lib",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"baseUrl": ".",
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
